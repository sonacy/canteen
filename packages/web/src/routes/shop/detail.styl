.topPics
  width 100%
  height 200px
  text-align: center
  .emptyPic
    text-align center
    height 200px
    line-height 200px
    font-size 36px
    color #999
  .pic
    display inline-block
    margin 0 2px
    img
      width 200px
      height 200px

.shopInfo
  width: 60%
  min-width 400px
  margin-left 20%
  padding 10px
  .shopName
    font-size 36px
    height 48px
    line-height 48px
    font-weight 700
    margin 4px 0
  .shopSubTitle
    font-size: 24px
    height 48px
    line-height 48px
    color: #999
    i 
      padding-right 20px
  .btns
    padding 12px 0
    border-bottom 1px solid #ddd

  .foods
    padding 20px 0
    border-bottom 1px solid #ddd
    .foodTitle
      font-size: 24px
      line-height 36px
      font-weight 700
    .foodCards
      width 100%
      padding 12px 0
      .foodItem
        margin-right 8px
        font-size: 12px
        line-height: 24px
        i
          padding-right 8px
      .emptyFood
        width: 100%
        height 300px
        line-height 300px
        font-size 36px
        text-align center
        color #ccc