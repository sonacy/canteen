.shopListContainer
  width: 60%
  min-width 400px
  margin-left 20%
  padding 10px
  cursor pointer
  .addBtn
    position fixed
    right 50px
    top 80%
    width 50px
    height 50px
  .shopItem
    padding 20px 0
    border-bottom 1px solid #ccc
    display: flex
    flex-direction: row
    align-items center
    justify-content center
    .shopImg
      flex: 0 0 200px
      width 200px
      height 200px
    .shopDetail
      flex 1
      height 200px
      margin-left 24px
      .shopName
        height 64px
        line-height 64px
        font-size: 36px
        font-weight: 700
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        width calc(60vw - 224px)
      .shopSubTitle
        font-size: 20px
        line-height 48px
        height 48px
        color #999
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        width calc(60vw - 224px)
        i
          padding-right 12px
